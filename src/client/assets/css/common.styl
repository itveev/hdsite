a
  link(colors.brand-primary)
  &.plain
    link(colors.brand-primary, true)
  &.block
    display: block;
    margin: $gap auto;
  &.btn
    display: inline-block !important
    border: 1px solid colors.brand-primary
    border-radius: ($gap / 1.25)
    outline: none
    padding: ($gap * 1.5) ($gap * 3.5)
    margin-bottom: ($gap / 2)
    color: colors.text-light
    text-decoration: none
    transition: all .1s ease-in
    box-shadow: 0 1px 2px 0 rgba(colors.dark-secondary, 0.2)
    text-align: center
    cursor: pointer
    button(colors.brand-primary)
    &.btn-wide
      width: 100%
    &.btn-small
      padding: ($gap / 1.25) ($gap * 2)
      border-radius: ($gap / 1.6)
      +.btn-small
        margin-left: ($gap / 2)
    &.btn-inverted
      button(colors.text-light, true)
      color: colors.brand-primary
    &.btn-link
      background: transparent
      border-color: transparent
      box-shadow: none
      color: colors.brand-primary
    &.btn-select
      &:after
        content: ''
        width: 10px
        height: 8px
        margin-left: 4px
        display: inline-block
        background-image: url('data:image/svg+xml;utf-8,<svg width=\"10\" height=\"4.375\" viewBox=\"0 0 16 7\" xmlns=\"http://www.w3.org/2000/svg\"><path stroke=\"#fff\" stroke-width=\"1.25\" d=\"M1 1l6.996 4.9L15 1\" fill=\"none\" stroke-linecap=\"square\"/></svg>')
        background-size: 10px 4.375px
        background-repeat: no-repeat
        background-position: center center
    &.btn-success
      button(colors.status-success)
    &.btn-danger
      button(colors.status-danger)
    &.btn-fb
      button(colors.facebook)
    &.btn-gp
      button(colors.google)
    &.btn-wl
      button(colors.windows)
    &.btn-wl
      button(colors.windows)
    &.btn-in
      button(colors.linkedin)
    .icon-glyph
      height: ($gap * 2)
      width: ($gap * 2)

h1, h2, h3, h4, h5, h6
  margin-top: ($gap * 3)
  margin-bottom: $gap

p
  @extends .margin-top
  margin-bottom: $gap

ul
  margin: 0
  &.nostyle
    list-nostyle()
  &.inline
    list-inline()

.form
  input
  select
  textarea
    border: 1px solid rgba(colors.dark-secondary, 0.25)
    border-radius: ($gap / 1.25)
    outline: none
    padding: ($gap * 1.5)
    @extends .font-f
    color: colors.text-dark
    width: 100%
    transition: border-color .1s ease-in, box-shadow .1s ease-in
    box-shadow: 0 1px 2px 0 rgba(colors.dark-secondary, 0.1) inset
    margin: 0
    -webkit-appearance: none
    -moz-appearance: none
    appearance: none
    background: transparent
    min-width: ($gap * 24)
    &:focus
    &:active
      border-color: rgba(colors.dark-secondary, 0.5)
      box-shadow: 0 1px 2px 0 rgba(colors.dark-secondary, 0.1) inset, 0 0 3px 0 rgba(colors.dark-secondary,0.5)
    &:disabled
      background-color: rgba(colors.dark-primary, 0.05)
    &.input-valid
      border-color: rgba(colors.status-success, 0.85)
      background-image: url('data:image/svg+xml;utf-8,<svg width=\"180\" height=\"180\" viewBox=\"0 0 180 180\" xmlns=\"http://www.w3.org/2000/svg\"><path d=\"M75.5 104.357864L47.1421356 76 33 90.1421356l42.4264069 42.4264064.2157287-.215728.0735932.073593 70.7106782-70.7106782-14.142136-14.1421357L75.5 104.357864zM90 180c-49.7056275 0-90-40.294373-90-90C0 40.2943725 40.2943725 0 90 0c49.705627 0 90 40.2943725 90 90 0 49.705627-40.294373 90-90 90z\" fill=\"' + colors.status-success + '\" fill-rule=\"evenodd\"/></svg>')
      background-size: ($gap * 2) ($gap * 2)
      background-repeat: no-repeat
      background-position: right $gap center
      &:focus
      &:active
        box-shadow: 0 1px 2px 0 rgba(colors.dark-secondary, 0.1) inset, 0 0 3px 0 rgba(colors.status-success,0.65)
    &.input-invalid
      border-color: rgba(colors.status-danger, 0.85)
      background-image: url('data:image/svg+xml;utf-8,<svg width=\"180\" height=\"180\" viewBox=\"0 0 180 180\" xmlns=\"http://www.w3.org/2000/svg\"><path d=\"M75.8578644 90l-28.2842713 28.284271 14.1421357 14.142136L90 104.142136l28.284271 28.284271 14.142136-14.142136L104.142136 90l28.284271-28.2842712-14.142136-14.1421357L90 75.8578644 61.7157288 47.5735931 47.5735931 61.7157288 75.8578644 90zM90 180c-49.7056275 0-90-40.294373-90-90C0 40.2943725 40.2943725 0 90 0c49.705627 0 90 40.2943725 90 90 0 49.705627-40.294373 90-90 90z\" fill=\"' + colors.status-danger + '\" fill-rule=\"evenodd\"/></svg>')
      background-size: ($gap * 2) ($gap * 2)
      background-repeat: no-repeat
      background-position: right $gap center
      &:focus
      &:active
        box-shadow: 0 1px 2px 0 rgba(colors.dark-secondary, 0.1) inset, 0 0 3px 0 rgba(colors.status-danger,0.65)
  &.input-small
      border-radius: ($gap / 1.6)
      padding: ($gap / 1.25)
      @extends .font-b
    &.no-resize
      resize: none
  .input-error {
    @extends .font-b;
    font-weight: $fw-bold;
    color: rgba(colors.status-danger, 0.85);
    margin-top: $gap;
  }
  select
    background-repeat: no-repeat
    background-position: right ($gap * 1.5) center
    background-size: 12px 5.25px
    vertical-align: middle
    margin-top: -2px
    background-image: url('data:image/svg+xml;utf-8,<svg width=\"16\" height=\"7\" viewBox=\"0 0 16 7\" xmlns=\"http://www.w3.org/2000/svg\"><path stroke=\"#4d5562\" stroke-width=\"1.25\" d=\"M1 1l6.996 4.9L15 1\" fill=\"none\" stroke-linecap=\"square\"/></svg>')
  label
    margin-bottom: ($gap / 2)
    color: rgba(colors.dark-secondary, 0.5)
    +#domain +span
      top: ($gap * 2.6)
  #domain
    width: 100%
    height: auto
    position: relative
    +span
      @extends .font-f
      font-weight: $fw-bold
      position: absolute
      padding: ($gap * 1.5)
      right: 1px
      top: 0
      margin-top: 1px
      background-color: #f6f6f6
      border-top-right-radius: ($gap / 1.25)
      border-bottom-right-radius: ($gap / 1.25)
      cursor: default
      -webkit-user-select: none
      -moz-user-select: none
      -ms-user-select: none
      user-select: none

.header,
.footer
  width: 100%
  height: 54px
  flex: 0 0 auto
  display: flex
  flex-flow: row nowrap
  padding: $gap
  .row
    flex-wrap: nowrap
    > div[class^=col]
      margin-top: 0
      margin-bottom: 0
  p
    margin: 0
  .btn:not(.btn-icon)
    display: inline-block
    padding: ($gap / 2) ($gap * 2.5)
    cursor: pointer
    &:not(.btn-link)
      border-radius: ($gap / 1.6)
  .form
    input
    select
      &.input-inverted
        display: inline-block
        padding: ($gap / 2) $gap
        border: 1px solid colors.text-light
        border-radius: ($gap / 1.6)
        box-shadow: none
        background: colors.text-light
        color: colors.text-dark
        @extends .font-b
      &:focus,
      &:active
        border-color: #fff

.controls-list
  width: 100%
  list-style: none
  margin: 0
  padding: 0
  li
    position: relative
    display: flex
    flex-flow: row wrap
    align-items: center
    justify-content: space-between
    &:not(:first-child)
      @extends .margin-top
    p
      flex: 1 1 auto
    &.controls-centered
      justify-content: center
    .btn
      margin-bottom: 0

.label
  border-radius: ($gap / 2.5)
  padding: 1px ($gap / 1.6)
  @extends .text-small
  background-color: rgba(colors.dark-primary, 0.1)
  color: colors.text-light
  cursor: pointer
  +.label
    margin-left: ($gap / 2)
  &.label-inverted
    color: colors.text-dark
  &.priority
    font-weight: $fw-extrabold
    &.priority-high
      background-color: rgba(colors.status-danger, 0.85)
    &.priority-normal
      background-color: rgba(colors.brand-primary, 0.85)
    &.priority-low
      background-color: rgba(colors.status-success, 0.85)

.icon
  display: inline-block
  height: ($gap * 4.2)
  width: auto
  vertical-align: middle
  margin-right: $gap
