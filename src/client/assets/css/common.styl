.user-icon
  position: relative
  width: ($gap * 10)
  height: ($gap * 10)
  border-radius: 50%
  padding: 0
  color: colors.text-light !important
  cursor: pointer
  display: flex
  flex-flow: row nowrap
  justify-content: center
  align-items: center
  @extends .font-h4
  font-weight: $fw-bold
  background-repeat: no-repeat
  background-size: cover
  background-position: center center
  overflow: hidden
  text-decoration: none !important
  .change-photo
    position: absolute
    background: rgba(colors.dark-secondary, 0.85)
    display: none
    padding: $gap
    width: 100%
    height: 100%
    border-radius: 50%
    top: 0
    left: 0
    @extends .font-b
    flex-flow: row nowrap
    justify-content: center
    align-items: center
    text-align: center
    color: colors.text-light
  &:hover
    .change-photo
      display: flex
  &.org-icon
    background-size: 75%
