*
  box-sizing: border-box

html, body
  width: 100%
  height: 100%
  margin: 0
  padding: 0

body
  @extends .font-b
  color: colors.text-dark
  > div
    width: 100%;
    height: 100%;
    min-width: $desktop-min-width
    display: flex
    flex-direction: column
    overflow: hidden
    * >
      flex: 0 0 auto
      overflow: scroll

.row
  display: flex
  flex-flow: row wrap
  flex: 1 1 auto
  margin-left: -($gap)
  margin-right: -($gap)
  &.row-no-wrap
    flex-wrap: nowrap
  &.row-reverse
    flex-direction: row-reverse

for $i in (1..$col-count)
  .col-{$i}
    flex: 0 1 "calc(100% * %s / %s - %s * 2)" % ($i $col-count $gap)
    margin: $gap
  if $i < $col-count
    .col-skip-{$i}
      margin-left: "calc(100% * %s / %s + %s) !important" % ($i $col-count $gap)

.delimiter-col
  display: flex
  flex-flow: column nowrap
  justify-content: center
  align-items: center
  div
    display: block
    flex: 1 1 auto
    height: 100%
    width: 1px
    background-color: rgba(colors.dark-primary, 0.25)

.center-col
  display: flex
  flex-flow: row wrap
  justify-content: center
  align-items: center